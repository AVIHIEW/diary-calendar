<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_cell"
    android:layout_width="match_parent"
    android:layout_height="@dimen/calendar_cell_height"
    android:background="@drawable/cell_bg"
    android:orientation="vertical"
    android:padding="2dp" >

    <TextView
        android:id="@+id/dayOfMonthTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dayOfMonthTextView"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/firstEventTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="event1"
            android:textSize="10dp"
            android:visibility="invisible"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/secondEventTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="event2"
            android:textSize="10dp"
            android:visibility="invisible"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/thirdEventTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="event3"
            android:textSize="10dp"
            android:visibility="invisible"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/fouthTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="event4"
            android:textSize="10dp"
            android:visibility="invisible"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>

</RelativeLayout>